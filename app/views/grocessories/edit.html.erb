<div class="form-wrappor">
<%= form_for @grocessori,url: grocessories_path, html: { class: 'form-horizontal', multipart: true } do |f|%>
    <center>
	<div class="form-group">
		<div class="col-span-3">
	    	Fruits Name:
	    </div>
	    <div class="col-span-9">
	    	<%= f.text_field :fruit, placeholder: 'Enter Fruit name', require: true%>
	    </div>
	</div>
	<div class="form-group">
		<div class="col-span-3">
	    	Vegetable Name:
	    </div>
	    <div class="col-span-9">
	    	<%= f.text_field :vegetable, placeholder: 'Enter vegetable Name', require: true%>
	    </div>
	</div> 
	
	<div class="col-md-8">
  		<%= f.button "Update Grocessori", class: "btn btn-success-green"%>
    </div>
    </center>
    <% end %>
    </div>
   
